<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Error" Height="150" Width="300">
    <Grid Background="#e9e9e9">
        <Canvas>
            <TextBlock TextAlignment="Center" FontSize="18" Height="43" Width="290" HorizontalAlignment="Left" VerticalAlignment="Center">Ошибка:</TextBlock>
            <TextBlock TextAlignment="Left" FontSize="18" Margin="3,8,0,0" Text="{Binding }"></TextBlock>
        
            <Button Height="40" Width="100"  Click="Button_Click" Canvas.Bottom="10" Canvas.Left="95" Canvas.Top="67">OK</Button>
        </Canvas>
    </Grid>
</Window>
